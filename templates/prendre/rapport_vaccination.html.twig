{% extends 'base.html.twig' %}

{% block title %}Hello BeneficiaireController!{% endblock %}

{% block body %}
    <div class="py-3 px-4">
        <h2 class="font-semibold text-xl text-gray-800 leading-tight">
            Rapport de vaccination  
            <a href="{{ path('vaccination') }}" class="btn btn-primary float-end font-bold " role="button" title="Lien 1">vaccination</a>        
        </h2>
    </div>

  
  <div class="  px-4 col-3 ">
      <div class="row ">
        <div class="py-2 col col-md-auto">
         {{ form_start(form) }}
          <h3>{{ form_row(form.vaccin) }}   </h3>       
        </div>
        <div class="py-5 col col-md-auto">
          <h3>{{ form_row(form.save) }}     
          {{ form_end(form) }}
        </div>   
      </div>
   </div>


      <div class=" px-3 ">
          <div class="table-responsive-sm">
            <table class="table table-hover table-bordered  ">
              <thead  class="table-secondary">

                <tr  class="">
                  <th rowspan="2" class="">N°</th>
                  <th rowspan="2" class="">NOM ET PRENOM</th>
                  <th rowspan="2" class="">SEXE</th>
                  <th rowspan="2" class="">DATE DE NAISSANCE</th>
                  <th rowspan="2" class="">AGE</th>
                  <th colspan="3" class="  text-center ">
                      DOSE
                  </th>
                  <th rowspan="2" class="">REMARQUE</th>
                </tr>

                <tr class="">
                  <th class="px-4 py-2 w-1/6">1</th>
                  <th class="px-4 py-2 w-1/6">2</th>
                  <th class="px-4 py-2 w-1/6">3</th>
                </tr>
              </thead>
              <tbody>
                

                {% for prendre in prendres %}

                  <tr>

                    <td class="">{{prendre.beneficiaire.numero }}</td>

                     <td class="px-4 py-2 w-1/4">{{ prendre .beneficiaire.nom }} {{ prendre .beneficiaire.prenom }}</td>

                    <td class="">{{ prendre .beneficiaire.sexe }}</td>

                    <td class="">{{prendre .beneficiaire.dateNaissance }}</td>

                    <td class="">{{ prendre .beneficiaire.getAge(prendre .beneficiaire.dateNaissance) }}</td>

                    {% if prendre.dose==1 %}
                      <td>{{prendre.datep}}</td>
                      <td></td>
                      <td></td>
                      <td>Appliquer la dose 2,3</td>
                    {% elseif prendre.dose==2 %}
                       <td></td>
                      <td>{{prendre.datep}}</td>
                      <td></td>
                      <td>Appliquer la dose 3</td>
                    {% else %}
                       <td></td>
                      <td></td>
                      <td>{{prendre.datep}}</td>
                      <td>Les 3 doses sont appliquées</td>
                    {% endif %}

                  </tr>
                {% endfor %}
                
              </tbody>
            </table>
    </div>
  </div>  
        
          

{% endblock %}
