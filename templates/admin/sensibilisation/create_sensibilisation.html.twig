{% extends 'admin/base.html.twig' %}

{% block wrapper %}

    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="text-primary m-0"> Sensibilisation</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="{{ path('liste_sensibilisation') }}">Retour</a></li>
              <li class="breadcrumb-item active">sensibilisation</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
  {% endblock %}
    
       
{% block body %}    


    {% if app.session.flashBag.has('ajouteSensibilisation') %}
     <div class="col-6 text-center mx-auto alert alert-info">
            {% for msg in app.session.flashBag.get('ajouteSensibilisation') %}
              <p>  {{ msg }}</p>
            {% endfor %}
        </div>
    {% endif %}

    <div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card card card-info">
                <div class="card-header text-center"><h3>Enregistrement d'une sensibilisation</h3></div>
                        <div class="card-body w-100">
     
                {{form_start(form)}}

                {{ form(form) }}
              
              {{form_end(form)}}

           </div>           
                </div>
            </div>
        </div>
    </div>


{% endblock %}
