{% extends "dashboards/base.html.twig" %}

{% block stylesheets %}
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="{{asset("dashboards/plugins/icheck-bootstrap/icheck-bootstrap.min.css")}}">
{% endblock %}

{% block body %}
<body class="hold-transition login-page">
<div class="login-box">
    <div class="login-logo">
        <a href="/"><b>WECAR</b>e</a>
    </div>
    <!-- /.login-logo -->

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('dashboard_logout') }}">Logout</a>
        </div>
    {% endif %}
    <div class="card">
        <div class="card-body login-card-body bg-warning">
            <form action="{{ path('dashboard_login') }}" method="post">
                <div class="input-group mb-3">
                    <input type="email" name="email" class="form-control" value="{{ last_username }}" placeholder="Email"/>
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
{# 
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Username" name="username"/>
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                </div> 
#}

                <div class="input-group mb-3">
                    <input type="password" class="form-control" name="password" placeholder="Password">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">


                <div class="row">
                    <div class="col-8">
                        <div class="icheck-primary">
                            <input type="checkbox" id="remember" class="text-dark" name="_remember_me">
                            <label for="remember">
                                Remember Me
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-4">
                        <button type="submit" class="btn btn-dark btn-block">Sign In</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>

            <div class="social-auth-links text-center mb-3">
                <p>- OR -</p>
                <a href="#" class="btn btn-block btn-dark">
                <i class="fab fa-facebook mr-2"></i> Sign in using Facebook
                </a>
                <a href="#" class="btn btn-block btn-danger">
                <i class="fab fa-google-plus mr-2"></i> Sign in using Google+
                </a>
            </div>
            <!-- /.social-auth-links -->

            <p class="mb-1">
                <a href="forgot-password.html">I forgot my password</a>
            </p>
        </div>
    </div>
</div>
</body>
{% endblock %}