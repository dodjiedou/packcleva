{% extends 'admin/base.html.twig' %}

{% block title %}

   CLAVA | Register

{% endblock %}
   

{% block wrapper %}

    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="text-info m-0">User</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="{{ path('admin') }}">Home</a></li>
              <li class="breadcrumb-item active">User</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
  {% endblock %}
    
       
{% block body %}  


 
    {% if app.session.flashBag.has('ajouteUser') %}
     <div class="col-8 text-center mx-auto alert alert-info">
            {% for msg in app.session.flashBag.get('ajouteUser') %}
              <p>  {{ msg }}</p>
            {% endfor %}
        </div>
    {% endif %}

  <div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card  card-info">
        <div class="card-header text-center"><h3>Enregistrement d'un utilisateur</h3></div>
            <div class="card-body w-100">
   
              {{form_start(form)}}

              {{ form(form) }}

              
              {{form_end(form)}}

           </div>     
        </div>
      </div>
    </div>
  </div>


{% endblock %}




