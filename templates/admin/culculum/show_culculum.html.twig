{% extends 'admin/base.html.twig' %}


{% block wrapper %}

    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">Culculum</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="{{ path('admin') }}">Home</a></li>
              <li class="breadcrumb-item active">culculum</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
  {% endblock %}

{% block body %}
    
         
    <div class=" px-3">
      <div class="row">
        <div class="col col-md-auto my-2">
         {{ form_start(form) }}
          <h3>{{ form_row(form.categorie) }} </h3>   
        </div>
        <div class="col col-md-auto my-5">
          {{ form_row(form.save) }}     
          {{ form_end(form) }}
        </div>
        <div class="col col-md-auto my-5">
         <a href="{{ path('culculum') }}" class="btn btn-primary btn-md  rounded  " role="button" title="add"><i class="fas fa-plus-square"></i>Ajouter une activit√©</a>
        </div>
        <div class="col  my-5">
          {% if app.session.flashBag.has('modifier') %}
            <div class="col-8 text-center mx-auto alert alert-success">
                {% for msg in app.session.flashBag.get('modifier') %}
                  <p>  {{ msg }}</p>
                {% endfor %}

             </div>
          {% endif %}
        </div>
    </div>
  </div>

   
    

       <div class=" px-3 ">
          <div class="card table-responsive-sm">
            <table  id="example1" class="table table-hover px-3   ">
              <thead >
                <tr class="table-secondary">
                  <th class="">CATEGORIE</th>
                  <th lass=""">DATE</th>
                  <th class="">NUMERO DE LECON</th>
                  <th class="">TITRE DE LECON</th>
                 <th colspan="3" class="text-center">ACTIONS</th>
                  
                </tr>
              </thead>
              <tbody>
                {% for culculum in culculums %}

                  <tr>

                    <td class="">{{culculum.categorie.nom }}</td>

                    <td class="">{{ culculum.date|date("d/m/Y") }}</td>

                    <td class="">{{culculum.numeroLecon }}</td>

                    <td class="">{{culculum.titreLecon }}</td>




                    <td class="">
                    <a href="{{ path('culculum_change',{"id" : culculum.id}) }}" class="btn btn-info btn-sm btn-block" role="button" title=""> <i class="fas fa-marker"></i>changer</a> </td>



                    <td class="">
                    <a href="{{ path('culculum_edit',{"id" : culculum.id}) }}" class="btn btn-success btn-sm btn-block" role="button" title="Lien 1"> <i class="fas fa-pencil-alt"></i>Modifier</a> </td>

                    <td class="">
                    <a href="{{ path('culculum_delete',{"id" : culculum.id}) }}" class="btn btn-danger mb-2 btn-sm " role="button" title="Lien 1">  <i class="fas fa-trash"></i>Supprimer</a> </td>

                    
                  </tr>
                {% endfor %}
              </tbody>
            </table>
    </div>
  </div> 

{% endblock %}



  


