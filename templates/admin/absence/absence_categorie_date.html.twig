{% extends 'admin/base.html.twig' %}

{% block wrapper %}

    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="text-info m-0"><i class="fas fa-edit"></i> Rapport de présence  </h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="{{ path('admin') }}">Home</a></li>
              <li class="breadcrumb-item active">présence</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
  {% endblock %}
{% block body %}

  <div class=" px-3">
     <div class="row">
        <div class="col col-md-auto py-2">
         {{ form_start(form) }}
          <h3>{{ form_row(form.categorie) }} </h3>   
        </div>
        <div class="col col-md-auto py-2">
          <h3>{{ form_row(form.date) }} </h3>   
        </div>
        <div class="col col-md-auto py-5">
          {{ form_row(form.save) }}     
          {{ form_end(form) }}
        </div>

   </div>
  


    
      <div class=" px-1 ">
      
          <div class="card table-responsive-sm">

            <table class="table table-hover table-bordered  ">
              <thead  class="table-primary">

                <tr class="">
                  <th rowspan="2" class="">Date</th>
                  <th rowspan="2" class="">Classe</th>
                  <th colspan="3" class="text-center">Nombre d'absent</th>
                  <th colspan="3" class="text-center">Nombre d'absence</th>
                </tr>
                <tr class="">
                  <th class=" ">Fille</th>
                  <th class="">Garçon</th>
                  <th colspan="" class="">Total</th>
                  <th class=" ">Fille</th>
                  <th class="">Garçon</th>
                  <th colspan="" class="">Total</th>
                </tr>


              </thead>
              <tbody>
               {% if tabAbsent==[[]] %}

              <tr>
                <td colspan="8" class="text-center">

                  <h3>vide</h3>

                </td>
              </tr>

              {% else %}

                 {% for line,val1 in tabAbsent %}
                 <tr>
                    <td class="">{{ tabAbsent[line][0]}}</td>

                   <td class="">{{ tabAbsent[line][1]}}</td>

                    <td class="px-4 py-2 w-1/4">{{ tabAbsent[line][2]}}</td>

                    <td class="">{{ tabAbsent[line][3]}}</td>

                    <td class="">{{ tabAbsent[line][4]}}</td>

                    <td class="">{{ tabAbsent[line][5]}}</td>

                    <td class="">{{ tabAbsent[line][6]}}</td>

                    <td class="">{{ tabAbsent[line][7]}}</td>

                 </tr>
                {% endfor %} 
                {% endif %} 
              </tbody>
            </table>
    </div>
  </div>  
        
          

{% endblock %}
