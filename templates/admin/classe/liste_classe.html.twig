{% extends 'admin/base.html.twig' %}

{% block wrapper %}

    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="text-info m-0"><i class="fas fa-th-list"></i> Liste des classes <i class="fas fa-school"></i></h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Classe</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
  {% endblock %}


{% block body %}
      
    <div class="py-2 px-3">
      <div class="row">
        <div class="col col-md-auto">
         <a href="{{ path('addclass') }}" class="btn btn-primary btn-md  rounded  " role="button" title="Lien 1"><i class="fas fa-plus-square"></i>Ajouter une classe</a>
        </div>
        <div class="col col-md-auto">
         <a href="{{ path('liste_absence') }}" class="btn btn-success btn-md  rounded  " role="button" title="Lien 1">Controlle de pr√©sence</a>
        </div>
        <div class="col ">
          {% if app.session.flashBag.has('modifierclasse') %}
            <div class="col-6 text-center mx-auto alert alert-success">
                {% for msg in app.session.flashBag.get('modifierclasse') %}
                  <p>  {{ msg }}</p>
                {% endfor %}

             </div>
          {% endif %}
        </div>
      </div>
      
   </div>

    
      <div class=" py-4 ">
          <div class="card table-responsive-sm">
            <table class="table table-hover px-3 py-4 ">
              <thead >
               
                <tr class="table-secondary">
                  <th class="">NOM</th>
                  <th class="">CATEGORIE</th>
                  <th class="">ANNEE</th>
                  <th lass=""">FILLE</th>
                  <th class="">GARCON</th>
                  <th class="">TOTAL</th>
                  <th colspan="5" class="text-center">ACTIONS</th>
                  
                </tr>
              </thead>
              <tbody>
                {% for line,val1 in tabClass %}
                 <tr>
                 
                    <td class="">{{tabClass[line][0]}}</td>
                    <td class="">{{tabClass[line][1]}}</td>
                     <td class="">{{tabClass[line][6]}}</td>
                    <td class="">{{tabClass[line][2]}}</td>
                    <td class="">{{tabClass[line][3]}}</td>
                    <td class="">{{tabClass[line][4]}}</td>


                    <td class="">
                    <a href="{{ path('create_seance',{"id" :tabClass[line][5]}) }}" class="btn btn-info btn-sm btn-block" role="button" title="Lien 1">Seance</a> </td>


                    <td class="">
                    <a href="{{ path('remplir',{"id" :tabClass[line][5]}) }}" class="btn btn-info btn-sm btn-block" role="button" title="Lien 1">Remplir</a> </td>



                   <td class=""><a href="{{ path('showclass', {"id": tabClass[line][5]} ) }}" class="btn btn-primary btn-sm  rounded  " role="button" title="Lien 1"><i class="fas fa-eye"></i></a> </td>

                    

                    <td class="">
                    <a href="{{ path('editclass',{"id" :tabClass[line][5]}) }}" class="btn btn-warning btn-sm btn-block" role="button" title="Lien 1"> <i class="fas fa-pencil-alt"></i></a> </td>

                    <td class="">
                    <a href="{{ path('deleteclass',{"id" :tabClass[line][5]} ) }}" class="btn btn-danger mb-2 btn-sm " role="button" title="Lien 1">  <i class="fas fa-trash"></i></a> </td>
                
                </tr>
               {% endfor %} 
               
              </tbody>
            </table>
    </div>
  </div>  

{% endblock %}
