{% extends 'admin/base.html.twig' %}

{% block wrapper %}

    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="text-info m-0"><i class=" fas fa-edit"></i> Rapport de vaccination  <i class=" fas fa-syringe"></i></h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="{{ path('rapport_vaccination') }}">Retour</a></li>
              <li class="breadcrumb-item active">rapport</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
  {% endblock %}
{% block body %}
    

    

    <div class="col-md-8 mx-auto text-center">
        <h2 class="font-semibold text-xl text-gray-800 leading-tight">
        
        {% if vaccin is not  null %}
           Rapport de vaccination du bénéficiaire {{beneficiaire.numero}} pour le vaccin {{vaccin.nom}} 

        {% endif %}
                   
        </h2>
        
    </div>

    <div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card card card-info">
        <div class="card-header text-center">
        <h3>Nombre total de dose à prendre : {{vaccin.nombreDeDose}}</h3>
        </div>
            <div class="card-body w-100">
  
                  <div class=" px-1 ">
                      <div class="card table-responsive-sm">
                        <table class="table table-hover table-bordered  ">
                          <thead  class="table-primary">

                            <tr  class="">
                              
                              <th rowspan="" class="">DOSE</th>
                              <th rowspan="" class="">DATE</th>
                              
                            
                              
                            </tr>
                      
                          </thead>
                          <tbody>
                            
                             {% for key, prendre in prendres %}
                          
                              <tr>

                                  
                                  <td>{{prendre.dose}}</td>
                                  <td>{{prendre.datep}}</td>
                                 


                              </tr>
                            {% endfor %}
                             
                          </tbody>
                        </table>

                </div>
              </div> 

           </div>     
        </div>
      </div>
    </div>
  </div>
        
          

{% endblock %}
