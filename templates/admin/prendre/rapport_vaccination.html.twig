{% extends 'admin/base.html.twig' %}

{% block wrapper %}

    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="text-info m-0"><i class=" fas fa-edit"></i> Rapport de vaccination  <i class=" fas fa-syringe"></i></h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="{{ path('admin') }}">Home</a></li>
              <li class="breadcrumb-item active">rapport</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
  {% endblock %}
{% block body %}
    
<div class="py-5 px-3">
      <div class="row">
        <div class="col col-md-auto py-2">
         {{ form_start(form) }}
          <h3>{{ form_row(form.vaccin) }} </h3>   
        </div>
        <div class="col col-md-auto py-5">
          {{ form_row(form.save) }}     
          {{ form_end(form) }}
        </div>
        <div class="col col-md-auto py-5">
          <a href="{{ path('addvaccin') }}" class=" btn btn-info btn-md btn-md btn-block" role="button" title="Lien 1">Ajouter un vaccin</a> 
        </div>

   </div>
    

    <div class="">
        <h2 class="font-semibold text-xl text-gray-800 leading-tight">
        
        {% if vaccin is not  null %}
           Liste des bénéficiaires ayant été vacciné ou non pour le vaccin {{vaccin.nom}} 

        {% endif %}
                   
        </h2>
    </div>
  
      <div class=" px-1 ">
          <div class="card table-responsive-sm">
            <table class="table table-hover table-bordered  ">
              <thead  class="table-primary">

                <tr  class="">
                  <th rowspan="" class="">N°</th>
                  <th rowspan="" class="">NOM ET PRENOM</th>
                  <th rowspan="" class="">SEXE</th>
                  <th rowspan="" class="">DATE DE NAISSANCE</th>
                  <th rowspan="" class="">AGE</th>
                  
                  <th colspan="2" class="text-center">ACTIONS</th>
                </tr>
          
              </thead>
              <tbody>
                
                 {% for beneficiaireVaccine in beneficiaireVaccines %}
               

                  <tr>

                    <td class="">{{beneficiaireVaccine.numero }}</td>

                     <td class="px-4 py-2 w-1/4">{{ beneficiaireVaccine.nom }} {{beneficiaireVaccine.prenom }}</td>

                    <td class="">{{ beneficiaireVaccine.sexe }}</td>

                    <td class="">{{beneficiaireVaccine.dateNaissance|date("d-m-Y") }}</td>

                    <td class="">{{ beneficiaireVaccine.getAge(beneficiaireVaccine.dateNaissance) }}</td>


                    <td style="width: 160px" class="">
                    <a href="{{ path('ajouter_vaccination', {"idv": vaccin.id,"idb": beneficiaireVaccine.id}) }}" class="btn btn-primary btn-sm rounded  " role="button" title="Lien 1">Nouvelle dose</a> </td>

                     <td style="width: 150px" class="">
                    <a href="{{ path('mesVaccinations', {"idv": vaccin.id,"idb": beneficiaireVaccine.id}) }}" class="btn btn-success btn-sm rounded  " role="button" title="Lien 1"> <i class="fas fa-eye"></i>Voir la rapport</a> </td>

                    

                  </tr>

                {% endfor %}

                 {% for beneficiaireNonVaccine in beneficiaireNonVaccines %}
               

                  <tr>

                    <td class="">{{beneficiaireNonVaccine.numero }}</td>

                     <td class="px-4 py-2 w-1/4">{{beneficiaireNonVaccine.nom }} {{beneficiaireNonVaccine.prenom }}</td>

                    <td class="">{{beneficiaireNonVaccine.sexe }}</td>

                    <td class="">{{beneficiaireNonVaccine.dateNaissance }}</td>

                    <td class="">{{beneficiaireNonVaccine.getAge(beneficiaireNonVaccine.dateNaissance) }}</td>


                    <td style="width: 160px" class="">
                    <a href="{{ path('ajouter_vaccination', {"idv": vaccin.id,"idb": beneficiaireNonVaccine.id}) }}" class="btn btn-warning btn-md rounded  " role="button" title="Lien 1"> 1ère dose</a> </td>

                    
                    
                    <td style="width: 150px" class="">
                    <a href="# " class="btn btn-info btn-sm rounded  " role="button" title="Lien 1"> <i class="fas fa-eye"></i>Aucun rapport</a> </td>
                    
                   
                  </tr>
                {% endfor %}
                
              </tbody>
            </table>
    </div>
  </div>  
        
          

{% endblock %}
