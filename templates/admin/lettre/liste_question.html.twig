{% extends 'admin/base.html.twig' %}


{% block wrapper %}

    

    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="text-info m-0"><i class="fas fa-envelope-open-text"></i> Lettres</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="{{ path('meslettres',{"id" : beneficiaire}) }}">Retour</a></li>
              <li class="breadcrumb-item active">lettre</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
  {% endblock %}

{% block body %}
    
       {% if app.session.flashBag.has('modifierquestion') %}
     <div class="col-8 text-center mx-auto alert alert-info">
            {% for msg in app.session.flashBag.get('modifierquestion') %}
              <p>  {{ msg }}</p>
            {% endfor %}
        </div>
    {% endif %}
    
       <div class=" py-4 ">
          <div class="card table-responsive-sm">
            <table  id="example1" class="table table-hover px-3 py-4  ">
              <thead >
                <tr class="table-secondary">
                  <th class="">N°</th>
                  <th class="">DATE</th>
                  <th class="">QUESTION</th>
                 <th colspan="4" class="text-center">ACTIONS</th>
                  
                </tr>
              </thead>
              <tbody>
                {% for key, question in questions %}

                  <tr data-widget="expandable-table" aria-expanded="true">

                    <td  class="">{{ key+1 }}</td>

                    <td  class="">{{question.dateQuestion|date("d-m-Y") }} </td>

                    <td class="">{{question.libelle}}</td>

                    <td style="width: 130px" class="">
                    {% if question.reponse is null %}
                        <a href="{{ path('create_reponse' , {"id": question.id}) }}" class="btn btn-primary btn-sm rounded  " role="button" title=""><i class="fas fa-hdd"></i> Répondre</a>
                     {% else %}

                        <a href="#" class="btn btn-success btn-sm rounded  " role="button" title=""><i class="fas fa-hdd"></i> Répondue</a>


                     {% endif %}

                     </td>

                    <td style="width: 150px" class="">
                    <a href="{{ path('show_reponse', {"id": question.id}) }}" class="btn btn-info btn-sm rounded  " role="button" title="Lien 1"> <i class="fas fa-eye"></i>Voir la reponse</a> </td>


                    <td style="width: 110px" class="">
                    <a href="{{ path('edit_question', {"id": question.id}) }}" class="btn btn-warning btn-sm rounded  " role="button" title="Lien 1"> <i class="fas fa-pencil-alt"></i>Modifier</a> </td>

                    <td style="width: 120px" class="">
                    <a href="{{ path('delete_question', {"id": question.id} ) }}" class="btn btn-danger btn-sm rounded  " role="button" title="Lien 1">  <i class="fas fa-trash"></i>Supprimer</a> </td>


                  </tr>
                {% endfor %}
              </tbody>
            </table>
    </div>
  </div> 

{% endblock %}



  


