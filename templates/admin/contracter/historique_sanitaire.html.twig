
{% extends 'admin/base.html.twig' %}

{% block wrapper %}

    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="text-info m-0"><i class="fas fa-history"></i> Historique sanitaire</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="{{ path('rapport_individuel') }}">Retour</a></li>
              <li class="breadcrumb-item active">Historique</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
  {% endblock %}

{% block body %} 


 <div class="px-4">
        <h2 class="font-semibold text-xl text-gray-800 leading-tight">
       
           Historique sanitaire du bénéficiaire {{beneficiaire .nom}} {{beneficiaire .prenom}} entre {{date1|date("d-m-Y")}} et {{date2|date("d-m-Y")}} 
                   
        </h2>
    </div>
   

   
  
      <div class=" px-3 py-4 ">
          <div class="card table-responsive-lg">
            <table class="table  able-hover  ">
              <thead >
                <tr class="table-secondary">

                <th class="text-center">Maladie</th>

                  <th class="text-center">Date de consultation </th>

                  <th class="text-center">Description de la manifestation de la maladie</th>
                  
                  <th class="text-center">Analyses demandées</th>

                  <th class="text-center">Produits prescrits</th>

                 
                  <th  class="text-center">Actions</th>
                  
                  
                </tr> 
              </thead>
              <tbody>
              {% if contracters==[] %}

              <tr>
                <td colspan="6" class="text-center">

                  <h3>vide</h3>

                </td>
              </tr>

              {% endif %}

                {% for contracter in contracters %}
                  
                  <tr>
                    <td class="">{{contracter .maladie.nom }}</td>

                    <td class="">{{contracter .date|date("d-m-Y") }}</td>

                    <td class="">{{contracter .manifestationMaladie }}</td>

                    

                    <td class="">{{contracter .infoAnalyse  }}</td>

                    <td class="">{{contracter .produitPrescrit   }}</td>

                    <td style="width: 130px" class=""><a href="{{ path('show_historique', {"id": contracter.id} ) }}" class="btn btn-primary btn-sm  " role="button" title="Lien 1"><i class="fas fa-eye"></i>Détails</a> </td>

                    
                {% endfor %}
               
              </tbody>
            </table>
    </div>
  </div>
          
{% endblock %}


    
