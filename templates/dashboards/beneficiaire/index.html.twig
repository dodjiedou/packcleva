{% extends "dashboards/layout.html.twig" %}

{% block title %}{{ ("bénéficiaire"|trans|upper) }}{% endblock %}

{% block stylesheets %}
    <!-- DataTables -->
    <link rel="stylesheet" href="{{asset("dashboards/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css")}}">
    <link rel="stylesheet" href="{{asset("dashboards/plugins/datatables-responsive/css/responsive.bootstrap4.min.css")}}">
    <link rel="stylesheet" href="{{asset("dashboards/plugins/datatables-buttons/css/buttons.bootstrap4.min.css")}}">
{% endblock %}

{% block javascripts %}
<!-- DataTables  & Plugins -->
<script src="{{asset("dashboards/plugins/datatables/jquery.dataTables.min.js")}}"></script>
<script src="{{asset("dashboards/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js")}}"></script>
<script src="{{asset("dashboards/plugins/datatables-responsive/js/dataTables.responsive.min.js")}}"></script>
<script src="{{asset("dashboards/plugins/datatables-responsive/js/responsive.bootstrap4.min.js")}}"></script>
<script src="{{asset("dashboards/plugins/datatables-buttons/js/dataTables.buttons.min.js")}}"></script>
<script src="{{asset("dashboards/plugins/datatables-buttons/js/buttons.bootstrap4.min.js")}}"></script>
<script src="{{asset("dashboards/plugins/jszip/jszip.min.js")}}"></script>
<script src="{{asset("dashboards/plugins/pdfmake/pdfmake.min.js")}}"></script>
<script src="{{asset("dashboards/plugins/pdfmake/vfs_fonts.js")}}"></script>
<script src="{{asset("dashboards/plugins/datatables-buttons/js/buttons.html5.min.js")}}"></script>
<script src="{{asset("dashboards/plugins/datatables-buttons/js/buttons.print.min.js")}}"></script>
<script src="{{asset("dashboards/plugins/datatables-buttons/js/buttons.colVis.min.js")}}"></script>
<!-- Page specific script -->

<script>
  $(function () {
    $("#example1").DataTable({
      "responsive": true, "lengthChange": false, "autoWidth": false,
      "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
    }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
    $('#example2').DataTable({
      "paging": true,
      "lengthChange": false,
      "searching": false,
      "ordering": true,
      "info": true,
      "autoWidth": false,
      "responsive": true,
    });
  });
</script>
{% endblock %}

{% block main %}

    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">{{ ("bénéficiaire"|trans|capitalize) }}</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a class="text-danger" href="{{ path("dashboard_index") }}">{{ ("dashboard"|capitalize) }}</a></li>
              <li class="breadcrumb-item active"><a class="text-danger" href="{{ path("beneficiaire_index") }}">{{ ("bénéficiaire"|trans|capitalize) }}</a></li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">

            <!-- Small boxes (Stat box) -->
            <div class="row">

                <div class="col-12">


                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title col-10 text-left">{{("bénéficiaires"|trans|capitalize)}}</h3>
                            <a class="col-2 btn btn-primary text-center" href="{{ path('beneficiaire_new') }}">{{ ("nouvel(le) bénéficiaire"|trans|capitalize) }}</a>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Prénoms</th>
                                        <th>Telephone</th>
                                        <th>Email</th>
                                        {# <th>Description</th> #}
                                        <th>Birth Day</th>
                                        <th>actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                    {% for beneficiaire in beneficiaires %}
                                    <tr>
                                        <td>
                                            <a href="{{ path('beneficiaire_show', {'slug': beneficiaire.slug}) }}">
                                                {{ beneficiaire.nom|trans|capitalize }}
                                            </a>
                                        </td>
                                        <td>
                                            <a href="{{ path('beneficiaire_show', {'slug': beneficiaire.slug}) }}">
                                                {{ beneficiaire.prenom|trans|capitalize }}
                                            </a>
                                        </td>
                                        <td>
                                            <a href="{{ path('beneficiaire_show', {'slug': beneficiaire.slug}) }}">
                                                {{ beneficiaire.telephone|trans|capitalize }}
                                            </a>
                                        </td>
                                        <td>
                                            <a href="{{ path('beneficiaire_show', {'slug': beneficiaire.slug}) }}">
                                                {{ beneficiaire.email|trans|capitalize }}
                                            </a>
                                        </td>
                                        <td>
                                            <a href="{{ path('beneficiaire_show', {'slug': beneficiaire.slug}) }}">
                                                {{ beneficiaire.dateNaissance|trans|capitalize }}
                                            </a>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-block">
                                                <a class="btn btn-outline-success" href="{{ path('beneficiaire_show', {'slug': beneficiaire.slug, 'beneficiaire':beneficiaire}) }}">
                                                    <i class="fa fa-binoculars"></i> {{ ("show"|trans|capitalize) }}
                                                </a>
                                                <a class="btn btn-outline-warning" href="{{ path('beneficiaire_edit', {'slug': beneficiaire.slug}) }}">
                                                    <i class="fas fa-edit"></i> {{ ("edit"|trans|capitalize) }}
                                                </a>
                                                {{ include('dashboards/beneficiaire/_delete_form.html.twig',{'beneficiaire':beneficiaire})}}
                                            </div>
                                        </td>
                                    </tr>
                    {% else %}
                                    <tr>
                                        <td colspan="10">no records found</td>
                                    </tr>
                    {% endfor %}
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Name</th>
                                        <th>Prénoms</th>
                                        <th>Telephone</th>
                                        <th>Email</th>
                                        {# <th>Description</th> #}
                                        <th>Birth Day</th>
                                        <th>actions</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->

                </div>
            
            </div>
            <!-- /.Small boxes (Stat box) -->

        </div>
    </section>

{% endblock %}

